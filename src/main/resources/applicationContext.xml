<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties" />
    <bean id="rockMusicBean"
          class="ua.shestakov.springcourse.RockMusic">
    </bean>
    <bean id="classicalMusicBean"
          class="ua.shestakov.springcourse.ClassicalMusic">
    </bean>
    <bean id="rapMusicBean"
          class="ua.shestakov.springcourse.RapMusic">
    </bean>

    <bean id="musicPlayer"
          class="ua.shestakov.springcourse.MusicPlayer"
    scope="prototype">

        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
        <property name="musicList">
            <list value-type="java.util.List">
                <ref bean="rockMusicBean"/>
                <ref bean="classicalMusicBean"/>
                <ref bean="rapMusicBean"/>
            </list>
        </property>
    </bean>

</beans>